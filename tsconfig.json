{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@__tests__/*": [
                "src/__tests__/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@constant/*": [
                "src/constant/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@stores/*": [
                "src/stores/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@logs/*": [
                "src/logs/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}